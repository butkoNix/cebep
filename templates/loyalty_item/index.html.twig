    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for loyalty_item in loyalty_items %}
            <tr>
                <td>{{ loyalty_item.id }}</td>
                <td>
