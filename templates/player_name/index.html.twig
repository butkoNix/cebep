<!DOCTYPE html>

<title>PlayerName index</title>

{% block body %}
    <h1>PlayerName index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PlayerId</th>
                <th>Name</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player_name in player_names %}
            <tr>
                <td>{{ player_name.id }}</td>
                <td>{{ player_name.playerId }}</td>
                <td>{{ player_name.name }}</td>
                <td>{{ player_name.date ? player_name.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('player_name_show', {'id': player_name.id}) }}">show</a>
                    <a href="{{ path('player_name_edit', {'id': player_name.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('player_name_new') }}">Create new</a>
{% endblock %}
